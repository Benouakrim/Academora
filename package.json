{
  "name": "academora",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "node --watch server/index.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "build": "tsc && vite build",
    "build:server": "node -e \"console.log('Server build step not required (plain Node).')\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server": "node server/index.js",
    "db:seed": "node server/database/seed.js",
    "db:verify": "node server/database/verify-setup.js",
    "db:create-admin": "node server/database/create-admin.js",
    "db:migrate": "node server/database/migrate.js",
    "test": "vitest --run",
    "test:ui": "vitest",
    "audit:contrast": "node --loader ts-node/esm scripts/a11y/contrastAudit.ts"
  },
  "dependencies": {
    "@sentry/node": "^8.39.0",
    "@sentry/react": "^8.39.0",
