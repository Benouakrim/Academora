    "@tiptap/extension-highlight": "^3.10.1",
    "@tiptap/extension-image": "^3.10.1",
    "@tiptap/extension-link": "^3.10.1",
    "@tiptap/extension-text-align": "^3.10.1",
    "@tiptap/extension-text-style": "^3.10.1",
    "@tiptap/extension-underline": "^3.10.1",
    "@tiptap/react": "^3.10.1",
    "@tiptap/starter-kit": "^3.10.1",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.0",
    "framer-motion": "^12.23.24",
    "helmet": "^7.1.0",
    "i18next": "^23.7.6",
    "i18next-browser-languagedetector": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "multer": "^2.0.2",
    "node-mailjet": "^6.0.4",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
